<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Manage Products | Admin Panel</title>
  <link rel="stylesheet" href="/style.css" />
</head>
<body>

  <!-- ‚úÖ Navbar -->
  <div class="navbar">
    <div class="logo"><strong>Admin Panel</strong></div>
    <div class="nav-links" id="navLinks">
      <a href="/admin">Dashboard</a>
      <a href="/admin/messages">Messages</a>
      <a href="/admin/products">Products</a>
      <a href="/admin/add-product">Add Product</a>
      <a href="/admin/logout" style="color: crimson;">Logout</a>
    </div>
  </div>

  <!-- ‚úÖ Product List -->
  <section class="products-section">
    <h2>All Products</h2>

    <% if (products.length === 0) { %>
      <p>No products available.</p>
    <% } else { %>
      <div class="product-list">
        <% products.forEach((product, index) => { %>
          <div class="product-item">
            <h3><%= product.title %></h3>
            <p><strong>Price:</strong> $<%= product.price %></p>
            <p><%= product.description %></p>
            
            <% if (product.images && product.images.length > 0) { %>
              <img src="<%= product.images[0] %>" alt="Image" class="preview-img">
            <% } %>

            <form action="/admin/delete-product/<%= product.id %>?username=admin&password=12345" method="POST">
              <% if (index < 3) { %>
                <button type="button" class="btn-disabled" title="Cannot delete featured product" disabled>Featured üîí</button>
              <% } else { %>
                <button type="submit" class="btn-delete">üóëÔ∏è Delete</button>
              <% } %>
            </form>
          </div>
        <% }); %>
      </div>
    <% } %>
  </section>

  <!-- ‚úÖ Footer -->
  <footer class="footer">
    <div class="footer-bottom">
      <p>&copy; 2025 Scab Impex Admin. All rights reserved.</p>
    </div>
  </footer>

  <!-- ‚úÖ Style -->
  <style>
    .products-section {
      max-width: 1100px;
      margin: 2rem auto;
      padding: 1rem;
      background: #fff;
      border-radius: 8px;
      box-shadow: 0 0 12px rgba(0,0,0,0.06);
    }
    .products-section h2 {
      text-align: center;
      margin-bottom: 2rem;
    }
    .product-list {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
      gap: 20px;
    }
    .product-item {
      border: 1px solid #ddd;
      padding: 16px;
      border-radius: 6px;
      background: #f9f9f9;
      position: relative;
    }
    .preview-img {
      width: 100%;
      height: 180px;
      object-fit: cover;
      margin-top: 10px;
      border-radius: 4px;
    }
    .btn-delete {
      background-color: crimson;
      color: #fff;
      border: none;
      padding: 8px 14px;
      border-radius: 4px;
      cursor: pointer;
      margin-top: 12px;
    }
    .btn-disabled {
      background-color: #aaa;
      color: #eee;
      border: none;
      padding: 8px 14px;
      border-radius: 4px;
      margin-top: 12px;
      cursor: not-allowed;
    }
  </style>

</body>
</html>
